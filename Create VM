---
- name: Create VM on RHV-Manager
  hosts: localhost
  connection: local
  gather_facts: true

  pre_tasks:
    - name: Login to oVirt
      redhat.rhv.ovirt_auth:
        url: https://rhv-manager.srv.mont.lab/ovirt-engine/api
        username: admin@internal
        ca_file: "{{ rhvm_cafile | default(omit) }}"
        password: 123qweASD

      tags:
        - always

  tasks:
    - name: Create new virtal machine from template
      redhat.rhv.ovirt_vm:
        auth: "{{ ovirt_auth }}"
        name: sl-test-vm{1..10}
        template: RHEL-8.5
        use_latest_template_version: true
        cluster: Mont-Cluster
        state: running
        wait: yes

  post_tasks:
    - name: Logout from oVirt
      redhat.rhv.ovirt_auth:
        state: absent
        ovirt_auth: "{{ ovirt_auth }}"
      tags:
        - always

  collections:
    - redhat.rhv
